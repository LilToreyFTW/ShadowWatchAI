# ShadowWatch AI Environment Configuration
# Copy this file to .env and fill in your actual values

# ========================================
# DATABASE CONFIGURATION
# ========================================

# PostgreSQL Database Connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shadowwatch_ai
DB_USER=shadowwatch_user
DB_PASSWORD=your_secure_password_here

# ========================================
# REDIS CONFIGURATION (Optional)
# ========================================

# Redis for caching and sessions
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# SHADOWWATCH AI SETTINGS
# ========================================

# Encryption key for sensitive data (must be 32 characters)
SHADOWWATCH_ENCRYPTION_KEY=your_32_character_encryption_key_here

# Maximum concurrent users
SHADOWWATCH_MAX_CONCURRENT_USERS=10000

# Heartbeat interval in seconds
SHADOWWATCH_HEARTBEAT_INTERVAL_SECONDS=30

# Hours before sending offline nudge
SHADOWWATCH_OFFLINE_NUDGE_HOURS=72

# Enable global monitoring
SHADOWWATCH_GLOBAL_MONITORING_ENABLED=true

# ========================================
# PRIVACY & COMPLIANCE
# ========================================

# GDPR compliance enabled
GDPR_COMPLIANCE_ENABLED=true

# Data retention in days
DATA_RETENTION_DAYS=365

# User consent required
USER_CONSENT_REQUIRED=true

# ========================================
# LOGGING
# ========================================

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Debug mode
DEBUG_MODE=false

# ========================================
# ATTACK TRAINING SYSTEM
# ========================================

# Maximum concurrent training sessions
ATTACK_TRAINING_MAX_SESSIONS=100

# Require consent for training
ATTACK_TRAINING_CONSENT_REQUIRED=true

# ========================================
# TUTORIAL SYSTEM
# ========================================

# Enable tutorial system
TUTORIAL_SYSTEM_ENABLED=true

# Tutorial progress tracking
TUTORIAL_PROGRESS_TRACKING=true

# ========================================
# DEPLOYMENT
# ========================================

# Node environment
NODE_ENV=development

# Server port
PORT=3000

# API port
API_PORT=3001

# ========================================
# SESSION MANAGEMENT
# ========================================

# Session secret (change in production)
SESSION_SECRET=your_secure_session_secret_here

# JWT secret for API authentication
JWT_SECRET=your_secure_jwt_secret_here

# ========================================
# DISCORD OAUTH2 INTEGRATION
# ========================================

# Discord Application Client ID
DISCORD_CLIENT_ID=your_discord_client_id_here

# Discord Application Client Secret
DISCORD_CLIENT_SECRET=your_discord_client_secret_here

# Discord OAuth2 Redirect URI
DISCORD_REDIRECT_URI=http://localhost:8080/auth/discord/callback

# ========================================
# CURSOR AI INTEGRATION
# ========================================

# Cursor AI API Key
CURSOR_API_KEY=your_cursor_api_key_here

# ========================================
# OPENAI INTEGRATION
# ========================================

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# ========================================
# SECURITY
# ========================================

# CORS origin for web interface
CORS_ORIGIN=http://localhost:8080

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# MONITORING & ANALYTICS
# ========================================

# Enable metrics collection
METRICS_ENABLED=true

# Metrics collection interval (seconds)
METRICS_INTERVAL_SECONDS=60

# ========================================
# BACKUP CONFIGURATION
# ========================================

# Enable automatic backups
BACKUP_ENABLED=true

# Backup interval (hours)
BACKUP_INTERVAL_HOURS=24

# Backup retention (days)
BACKUP_RETENTION_DAYS=30

# ========================================
# NOTIFICATIONS
# ========================================

# Email notifications enabled
EMAIL_NOTIFICATIONS_ENABLED=false

# SMTP server (if email enabled)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ========================================
# DEVELOPMENT SETTINGS
# ========================================

# Enable hot reload
HOT_RELOAD_ENABLED=true

# Enable API documentation
API_DOCS_ENABLED=true

# Enable debug endpoints
DEBUG_ENDPOINTS_ENABLED=false

# ========================================
# PRODUCTION OPTIMIZATIONS
# ========================================

# Enable compression
COMPRESSION_ENABLED=true

# Cache static assets (seconds)
STATIC_CACHE_SECONDS=86400

# Database connection pool size
DB_POOL_SIZE=10

# Redis connection pool size
REDIS_POOL_SIZE=5

# ========================================
# MONITORING & ALERTS
# ========================================

# Health check enabled
HEALTH_CHECK_ENABLED=true

# Alert thresholds
CPU_ALERT_THRESHOLD=80
MEMORY_ALERT_THRESHOLD=85
DISK_ALERT_THRESHOLD=90

# ========================================
# EXTERNAL INTEGRATIONS
# ========================================

# Slack webhook for alerts
SLACK_WEBHOOK_URL=

# Discord webhook for notifications
DISCORD_WEBHOOK_URL=

# ========================================
# FEATURE FLAGS
# ========================================

# Enable beta features
BETA_FEATURES_ENABLED=false

# Enable experimental AI models
EXPERIMENTAL_AI_ENABLED=false

# Enable advanced analytics
ADVANCED_ANALYTICS_ENABLED=false

# ========================================
# PERFORMANCE TUNING
# ========================================

# Worker threads for heavy computations
WORKER_THREADS=4

# Memory limit per worker (MB)
WORKER_MEMORY_LIMIT=512

# Request timeout (seconds)
REQUEST_TIMEOUT_SECONDS=30

# ========================================
# LOGGING CONFIGURATION
# ========================================

# Log to file
LOG_TO_FILE=true

# Log directory
LOG_DIRECTORY=./logs

# Maximum log file size (MB)
MAX_LOG_SIZE_MB=100

# Maximum log files to keep
MAX_LOG_FILES=10

# ========================================
# MAINTENANCE
# ========================================

# Maintenance mode
MAINTENANCE_MODE=false

# Maintenance message
MAINTENANCE_MESSAGE="System is under maintenance. Please check back later."

# ========================================
# LEGAL & COMPLIANCE
# ========================================

# Terms of service URL
TERMS_OF_SERVICE_URL=https://shadowwatch-ai.com/terms

# Privacy policy URL
PRIVACY_POLICY_URL=https://shadowwatch-ai.com/privacy

# Support email
SUPPORT_EMAIL=support@shadowwatch-ai.com

# ========================================
# ANALYTICS & TRACKING
# ========================================

# Google Analytics ID
GA_TRACKING_ID=

# Enable user behavior tracking
USER_TRACKING_ENABLED=false

# Cookie consent required
COOKIE_CONSENT_REQUIRED=true