# ShadowWatch AI Environment Configuration
# Copy this file to .env and fill in your values

# ==========================================
# SERVER CONFIGURATION
# ==========================================

NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ==========================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==========================================

DB_HOST=localhost
DB_PORT=5432
DB_NAME=crimecity_shadowwatch
DB_USER=shadowwatch_user
DB_PASSWORD=your_secure_database_password

# ==========================================
# REDIS CONFIGURATION (Optional - for enhanced performance)
# ==========================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==========================================
# SHADOWWATCH AI CONFIGURATION
# ==========================================

# Encryption key for activity data (MUST be 32 characters)
SHADOWWATCH_ENCRYPTION_KEY=your_32_character_encryption_key_here

# Global monitoring settings
SHADOWWATCH_GLOBAL_MONITORING_ENABLED=true
SHADOWWATCH_MAX_CONCURRENT_USERS=10000
SHADOWWATCH_HEARTBEAT_INTERVAL_SECONDS=30
SHADOWWATCH_OFFLINE_NUDGE_HOURS=72

# Tutorial system settings
TUTORIAL_REMINDER_INTERVAL_MINUTES=15
TUTORIAL_AUTO_START=true

# Attack training settings
ATTACK_TRAINING_MAX_SESSIONS=100
ATTACK_TRAINING_CONSENT_REQUIRED=true

# ==========================================
# PRIVACY & GDPR SETTINGS
# ==========================================

GDPR_COMPLIANCE_ENABLED=true
DATA_RETENTION_DAYS=365
PRIVACY_AUDIT_LOGGING=true
USER_CONSENT_REQUIRED=true

# ==========================================
# ADMIN & MONITORING
# ==========================================

ADMIN_EMAIL=admin@yourgame.com
ADMIN_PASSWORD=secure_admin_password
ADMIN_DASHBOARD_ENABLED=true
METRICS_COLLECTION_ENABLED=true

# ==========================================
# EMAIL CONFIGURATION (for notifications)
# ==========================================

EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourgame.com

# ==========================================
# INTEGRATION SETTINGS
# ==========================================

# Frontend URL for CORS
FRONTEND_URL=https://your-game-domain.com

# WebSocket settings
WEBSOCKET_PING_INTERVAL=25000
WEBSOCKET_PING_TIMEOUT=60000

# ==========================================
# LOGGING & DEBUGGING
# ==========================================

LOG_LEVEL=info
DEBUG_MODE=false
PERFORMANCE_MONITORING=true

# ==========================================
# SECURITY SETTINGS
# ==========================================

# JWT for admin authentication
ADMIN_JWT_SECRET=your_admin_jwt_secret_key

# API rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_WINDOW_MINUTES=15

# ==========================================
# OPTIONAL INTEGRATIONS
# ==========================================

# Discord webhook for alerts
DISCORD_WEBHOOK_URL=

# Analytics service
ANALYTICS_ENDPOINT=

# Backup settings
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
